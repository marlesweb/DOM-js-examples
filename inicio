    <script>
    let miVentana;

    function abrir(estado){ 
    if(estado =="abrir"){
    miVentana = window.open("http://milanuncios.com", "ventanal", "width=500px, height=300px, top=300px left=500px");
    }
   else{
    miVentana.close();
    }
    }
    
